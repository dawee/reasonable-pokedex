{
  "version": 2,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@now/node",
      "env": {
        "DB_HOST": "@db-host"
      }
    },
    {
      "src": "index.html",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "index.html"
    },
    {
      "src": "/graphql",
      "dest": "src/app.js"
    }
  ]
}
