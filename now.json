{
  "version": 2,
  "env": {
    "DB_HOST": "@db-host",
    "DB_PORT": "@db-port",
    "DB_USER": "@db-user",
    "DB_PASSWORD": "@db-password",
    "DB_NAME": "@db-name"
  },
  "builds": [
    {
      "src": "src/app.js",
      "use": "@now/node"
    },
    {
      "src": "index.html",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "index.html"
    },
    {
      "src": "/graphql",
      "dest": "src/app.js"
    }
  ]
}
